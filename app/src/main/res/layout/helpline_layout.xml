<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!--왼쪽 이미지-->
    <ImageView
        android:id="@+id/helpline_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Helpline Image Placeholder"
        android:src="@drawable/ic_launcher_background"/>

    <!--제목-->
    <TextView
        android:id="@+id/helpline_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/helpline_image"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--bullet list-->
    <LinearLayout
        android:id="@+id/helpline_bullet_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/helpline_title"
        app:layout_constraintStart_toEndOf="@id/helpline_image"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--연락처-->
    <TextView
        android:id="@+id/helpline_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/helpline_bullet_list"
        app:layout_constraintStart_toEndOf="@id/helpline_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"  />


</androidx.constraintlayout.widget.ConstraintLayout>